+                      --disable-ffplay
+                      --disable-ffmpeg
+                      --disable-ffprobe
+                      --enable-gpl
+                      --enable-runtime-cpudetect
+                      --enable-postproc
+                      --enable-pthreads
+                      --enable-muxer=spdif
+                      --enable-muxer=adts
+                      --enable-muxer=asf
+                      --enable-muxer=ipod
+                      --enable-encoder=ac3
+                      --enable-encoder=aac
+                      --enable-encoder=wmav2
